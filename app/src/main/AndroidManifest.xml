<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imadassignment2app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="HistoryQuizApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other internal activities -->
        <activity android:name=".MainActivityFlashcards" android:exported="false" />
        <activity android:name=".MainActivityScore" android:exported="false" />
        <activity android:name=".ReviewActivity" android:exported="false" />

    </application>

</manifest>
